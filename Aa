import org.json.JSONObject;
import org.junit.Assert;
import org.junit.Test;

public class LocationDetailsTest {

    @Test
    public void testGetLocationDetailsByNfid() {
        // Create a sample input JSON object
        JSONObject inputJson = new JSONObject();
        inputJson.put("nfId", "12345");

        // Create an instance of the class containing the method
        YourClassName yourClass = new YourClassName();

        // Call the method and get the result
        String result = yourClass.getLocationDetailsbyNfid(inputJson);

        // Assert the expected output based on the input JSON object
        JSONObject expectedResult = new JSONObject();
        JSONObject response = new JSONObject();
        response.put("CLLI", "CLLI123");
        response.put("LOB", "VZB");
        response.put("RFT_DATE", "2023-06-07");
        response.put("SITE_CODE", "SITE123");
        expectedResult.put("results", response);

        Assert.assertEquals(expectedResult.toString(), result);
    }
}
